set showmode
let mapleader=" "
set easymotion
set clipboard=unnamed
set nu
set surround
noremap <Leader>p "0p
noremap <Leader>P "0P
vnoremap <Leader>p "0p

nmap <S-Up> v<Up>
nmap <S-Down> v<Down>
nmap <S-Left> v<Left>
nmap <S-Right> v<Right>
vmap <S-Up> <Up>
vmap <S-Down> <Down>
vmap <S-Left> <Left>
vmap <S-Right> <Right>
imap <S-Up> <Esc>v<Up>
imap <S-Down> <Esc>v<Down>
imap <S-Left> <Esc>v<Left>
imap <S-Right> <Esc>v<Right>
nnoremap Y y$

map <Leader> <Plug>(easymotion-prefix)
set hlsearch
set incsearch
set highlightedyank
set textobj-entire
set argtextobj
set sneak

